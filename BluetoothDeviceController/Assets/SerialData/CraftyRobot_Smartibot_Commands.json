{
  "AllSerialDevices": [
    {
      "Name": "Smartibot",
      "ClassName": "CraftyRobot_Smartibot",
      "DeviceName": "Smartibot",
      "Description": "Commands for a build-it-yourself robot on Kickstarter",
      "Aliases": [],
      "Links": [
        "https://thecraftyrobot.net/collections/smartibot",
        "http://www.espruino.com/Smartibot",
        "https://www.kickstarter.com/projects/460355237/smartibot-the-worlds-first-ai-enabled-cardboard-ro",
        "https://www.espruino.com/modules/Smartibot.js",
        "https://www.reddit.com/r/Smartibot/"
      ],
      "Settings": {
        "LeftEyeRed": {
          "Label": "L. Red",
          "Min": 0,
          "Max": 255,
          "Init": 0,
          "InputType": "Slider",
          "OnChange": "UpdateEye"
        },
        "LeftEyeGreen": {
          "Label": "L. Green",
          "Min": 0,
          "Max": 255,
          "Init": 0,
          "InputType": "Slider",
          "OnChange": "UpdateEye"
        },
        "LeftEyeBlue": {
          "Label": "L. Blue",
          "Min": 0,
          "Max": 255,
          "Init": 0,
          "InputType": "Slider",
          "OnChange": "UpdateEye"
        }
      },
      "Commands": {
        "Smart": {
          "Label": "Smarti",
          "Replace": "smarti=exports={};\n"
        },
        "Forward Left": {
          "Label": "⇖",
          "Set": {
            "DriveL": 40,
            "DriveR": 70
          },
          "OnChange": "Update"
        },
        "Forward": {
          "Label": "⇑",
          "Set": {
            "DriveL": 60,
            "DriveR": 60
          },
          "OnChange": "Update"
        },
        "Forward Right": {
          "Label": "⇗",
          "Set": {
            "DriveL": 70,
            "DriveR": 40
          },
          "OnChange": "Update"
        },


        "Left": {
          "Label": "⇐",
          "Set": {
            "DriveL": 20,
            "DriveR": 50
          },
          "OnChange": "Update"
        },
        "Stop": {
          "Label": "⊚",
          "Set": {
            "DriveL": 0,
            "DriveR": 0
          },
          "OnChange": "Update"
        },
        "Right": {
          "Label": "⇒",
          "Set": {
            "DriveL": 50,
            "DriveR": 30
          },
          "OnChange": "Update"
        },
        "Backward Left": {
          "Label": "⇙",
          "Set": {
            "DriveL": -30,
            "DriveR": -60
          },
          "OnChange": "Update"
        },
        "Backward": {
          "Label": "⇓",
          "Set": {
            "DriveL": -40,
            "DriveR": -40
          },
          "OnChange": "Update"
        },
        "Backward Right": {
          "Label": "⇘",
          "Set": {
            "DriveL": -60,
            "DriveR": -30
          },
          "OnChange": "Update"
        },
        "Update": {
          "Label": "Update",
          "Compute": "$BERO1.0ACT,0,, $ArmL_GD $, $ArmR_GD $, $Head_GD $,0, $DriveL_GD $, $DriveR_GD $, $Led0_GD $, $Led1_GD $, $Led2_GD $, $Led3_GD $, $Led4_GD $, $Led5_GD $, $Headphone_GD $,1\r\n"
        },
        "UpdateEye": {
          "Label": "Eye",
          "Compute": "$smarti.setLEDs([ $LeftEyeGreen_GD $, $LeftEyeRed_GD $, $LeftEyeBlue_GD $]);\n"
        }
      }
    }
  ]
}
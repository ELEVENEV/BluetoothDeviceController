{
  "AllSerialDevices": [
    {
      "Id": "CraftyRobot-Smartibot",
      "Name": "Smartibot",
      "ClassName": "CraftyRobot_Smartibot",
      "DeviceName": "Smartibot",
      "Description": "Commands for a build-it-yourself robot on Kickstarter",
      "Aliases": [],
      "Links": [
        "https://thecraftyrobot.net/collections/smartibot",
        "http://www.espruino.com/Smartibot",
        "https://www.kickstarter.com/projects/460355237/smartibot-the-worlds-first-ai-enabled-cardboard-ro",
        "https://www.espruino.com/modules/Smartibot.js",
        "https://www.reddit.com/r/Smartibot/"
      ],
      "Settings": {
        "LeftEyeRed": {
          "Label": "L. Red",
          "Min": 0,
          "Max": 255,
          "Init": 0,
          "InputType": "Slider",
          "OnChange": "UpdateEye"
        },
        "LeftEyeGreen": {
          "Label": "L. Green",
          "Min": 0,
          "Max": 255,
          "Init": 0,
          "InputType": "Slider",
          "OnChange": "UpdateEye"
        },
        "LeftEyeBlue": {
          "Label": "L. Blue",
          "Min": 0,
          "Max": 255,
          "Init": 0,
          "InputType": "Slider",
          "OnChange": "UpdateEye"
        },
        "RightEyeRed": {
          "Label": "R. Red",
          "Min": 0,
          "Max": 255,
          "Init": 0,
          "InputType": "Slider",
          "OnChange": "UpdateEye"
        },
        "RightEyeGreen": {
          "Label": "R. Green",
          "Min": 0,
          "Max": 255,
          "Init": 0,
          "InputType": "Slider",
          "OnChange": "UpdateEye"
        },
        "RightEyeBlue": {
          "Label": "R. Blue",
          "Min": 0,
          "Max": 255,
          "Init": 0,
          "InputType": "Slider",
          "OnChange": "UpdateEye"
        }
      },
      "Commands": {
        "Forward Left": {
          "Label": "⇖",
          "Set": {
            "DriveL": 1,
            "DriveR": 0
          },
          "OnChange": "UpdateMotors"
        },
        "Forward": {
          "Label": "⇑",
          "Set": {
            "DriveL": 1,
            "DriveR": 1
          },
          "OnChange": "UpdateMotors"
        },
        "Forward Right": {
          "Label": "⇗",
          "Set": {
            "DriveL": 0,
            "DriveR": 1
          },
          "OnChange": "UpdateMotors"
        },


        "Left": {
          "Label": "⇐",
          "Set": {
            "DriveL": 1,
            "DriveR": -1
          },
          "OnChange": "UpdateMotors"
        },
        "Stop": {
          "Label": "⊚",
          "Set": {
            "DriveL": 0,
            "DriveR": 0
          },
          "OnChange": "UpdateMotors"
        },
        "Right": {
          "Label": "⇒",
          "Set": {
            "DriveL": -1,
            "DriveR": 1
          },
          "OnChange": "UpdateMotors"
        },

        "Backward Left": {
          "Label": "⇙",
          "Set": {
            "DriveL": 0,
            "DriveR": -1
          },
          "OnChange": "UpdateMotors"
        },
        "Backward": {
          "Label": "⇓",
          "Set": {
            "DriveL": -1,
            "DriveR": -1
          },
          "OnChange": "UpdateMotors"
        },
        "Backward Right": {
          "Label": "⇘",
          "Set": {
            "DriveL": -1,
            "DriveR": 0
          },
          "OnChange": "UpdateMotors"
        },
        "Smart": {
          "Label": "Pre-Smarti",
          "Replace": "smarti=exports={};\n"
        },
        "Load": {
          "Label": "Smarti",
          "ReplaceFile": "SerialFiles\\Espruino_Modules_Smartibot.js"
        },
        "UpdateMotors": {
          "Label": "UpdateMotors",
          "IsHidden": true,
          "TODO:_REM": "This is the old BERO command line",
          "Compute": "$smarti.setMotor(1, $DriveL_GN $);\nsmarti.setMotor(2, $DriveR_GN_IV $);\n"
        },
        "UpdateEye": {
          "Label": "Eye",
          "IsHidden": true,
          "Compute": "$smarti.setLEDs([ $LeftEyeGreen_GN $, $LeftEyeRed_GN $, $LeftEyeBlue_GN $],[ $RightEyeGreen_GN $, $RightEyeRed_GN $, $RightEyeBlue_GN $]);\n"
        }
      }
    }
  ]
}